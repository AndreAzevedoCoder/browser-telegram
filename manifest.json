{
  "name": "AI Stealth: Take Home Challenge",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/a*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://web.telegram.org/a*"],
      "js": ["oto.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting", "activeTab", 
    "webRequest",
    "webRequestBlocking", "declarativeNetRequestWithHostAccess"],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://web.telegram.org/*"]
    },
    {
      "resources": ["message-worker.js"],
      "matches": ["https://web.telegram.org/*"]
    },
    {
      "resources": ["sandbox.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "csp_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": ["*://web.telegram.org/a*"]
}
